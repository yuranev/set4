<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:screenOrientation="portrait"
    android:scrollbars="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="10"
        android:useDefaultMargins="true"
        tools:ignore="UselessParent">

        <ImageView
            android:id='@+id/image_1'
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:src='@drawable/cbo1' />

        <ImageView
            android:id='@+id/image_2'
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:src='@drawable/cbo2' />

        <ImageView
            android:id='@+id/image_3'
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:src='@drawable/cbo3' />

        <ImageView
            android:id='@+id/image_4'
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:src='@drawable/cbt1' />

        <ImageView
            android:id='@+id/image_5'
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:src='@drawable/cbt2' />

        <ImageView
            android:id='@+id/image_6'
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:src='@drawable/cbt2' />

        <ImageView
            android:id='@+id/image_7'
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:src='@drawable/cbt2' />

        <ImageView
            android:id='@+id/image_8'
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:src='@drawable/cbt2' />

        <ImageView
            android:id='@+id/image_9'
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:src='@drawable/cbt2' />

        <ImageView
            android:id='@+id/image_10'
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:src='@drawable/cbt2' />

        <ImageView
            android:id='@+id/image_11'
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:src='@drawable/cbt2' />

        <ImageView
            android:id='@+id/image_12'
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:src='@drawable/cbt2' />

        <TextView
            android:id="@+id/timer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="0.5"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="0.5"
            android:layout_column="0"
            android:layout_row="8"
            android:text="Таймер"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/timercount"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="0.5"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="0.5"
            android:layout_column="0"
            android:layout_row="9"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="0.5"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="0.5"
            android:layout_column="2"
            android:layout_row="8"
            android:text="Очки"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/scorecount"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="0.5"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="0.5"
            android:layout_column="2"
            android:layout_row="9"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

    </GridLayout>

</RelativeLayout>